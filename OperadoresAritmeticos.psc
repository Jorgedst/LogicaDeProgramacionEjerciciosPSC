Algoritmo OperadoresAritmeticos
	// Operadores Aritmeticos
	
	//Suma +
	a = 3 + 4
	imprimir 'suma: ', a
	
	// Resta 
	b = 6 - 2
	Imprimir 'resta: ', b
	
	// Multiplicacion
	c = a * 2
	Imprimir 'Multiplicacion: ', c
	
	//Division
	d = b/c
	Imprimir 'Division: ' , d
	
	//Potencia
	e = a^2
	Imprimir 'Potencia: ' , e
	
	//Modulo (residuo division)
	f = 9 % 3
	Imprimir 'Modulo: ' , f

FinAlgoritmo
